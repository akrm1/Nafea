<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:tint="@color/courseSubEvaluation_progressBar_backgroundColor">
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip android:clipOrientation="horizontal">
            <shape>
                <corners android:radius="4dp"/>
                <gradient
                    android:startColor="@color/courseSubEvaluation_progressBar_startProgressColor"
                    android:centerColor="@color/courseSubEvaluation_progressBar_centerProgressColor"
                    android:centerX="0.5"
                    android:endColor="@color/courseSubEvaluation_progressBar_endProgressColor"
                    android:angle="0"
                    android:useLevel="true"
                    />
            </shape>
        </clip>
    </item>

</layer-list>