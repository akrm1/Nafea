<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/upldDep_txt_major"
        style="@style/Nafea_DefaultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="التخصص"
        android:textColor="#686868"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/upldDep_txt_plan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/upldDep_txt_plan"
        style="@style/Nafea_DefaultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="إختر الخطة"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/upldDep_img_photo"
        app:layout_constraintEnd_toEndOf="@+id/upldDep_img_photo"
        app:layout_constraintStart_toStartOf="@+id/upldDep_img_photo" />

    <ImageView
        android:id="@+id/upldDep_img_photo"
        android:layout_width="189dp"
        android:layout_height="142dp"
        android:layout_marginBottom="128dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintBottom_toTopOf="@+id/upldDep_b_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/upldDep_b_choosePhoto"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="إختر صورة"
        app:layout_constraintEnd_toEndOf="@+id/upldDep_img_photo"
        app:layout_constraintStart_toStartOf="@+id/upldDep_img_photo"
        app:layout_constraintTop_toBottomOf="@+id/upldDep_img_photo" />

    <Button
        android:id="@+id/upldDep_b_post"
        style="@style/Nafea_DefaultButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="نشر الخطة"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>