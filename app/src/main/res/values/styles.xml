<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryDark">#03A9F4</item>
        <item name="colorAccent">#03A9F4</item>
    </style>

    <style name="AppTheme.noActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Nafea_DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:background">#03A9F4</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="Nafea_DefaultTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF3C3C3C</item>
    </style>
    <style name="Nafea_likeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4CAF50</item>
    </style>
    <style name="Nafea_dislikeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#F44336</item>
    </style>
    <style name="Nafea_SelectFragment_TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#2C2C2C</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Nafea_SelectedTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FF3C3C3C</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="SelectIconResult" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:text">""</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF000000</item>
    </style>
    <style name="Nafea_TextButton" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#FF2B80FF</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Nafea_DefaultCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Nafea_DefaultTextField" parent="Widget.AppCompat.EditText">
        <item name="android:text">""</item>
    </style>

    <style name="Nafea_DefaultRatingStars" parent="Theme.AppCompat">
        <item name="colorControlNormal">#8E8E8E</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>

</resources>